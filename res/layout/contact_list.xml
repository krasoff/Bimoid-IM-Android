<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:alwaysDrawnWithCache="false">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:drawingCacheQuality="low">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:drawingCacheQuality="low">
            <ListView android:layout_width="fill_parent" android:divider="#00000000" android:layout_weight="1" android:id="@+id/contact_list_list" android:layout_height="fill_parent" android:scrollbars="none" android:background="#00000000" android:cacheColorHint="#00000000" android:alwaysDrawnWithCache="true" android:drawingCacheQuality="low"></ListView>
            <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/contact_list_bottom" android:background="@drawable/contactlist_bottom_panel" android:alwaysDrawnWithCache="false" android:gravity="center_vertical">
                <HorizontalScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1" android:alwaysDrawnWithCache="false">
                    <LinearLayout android:id="@+id/contact_list_bottom_panel" android:layout_height="wrap_content" android:layout_width="fill_parent" android:animationCache="false" android:alwaysDrawnWithCache="false"></LinearLayout>
                </HorizontalScrollView>
                <LinearLayout android:layout_width="wrap_content" android:gravity="center_vertical" android:layout_height="wrap_content" android:alwaysDrawnWithCache="false">

                    <ImageView
                        android:id="@+id/contact_list_fast_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settings" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    
</LinearLayout>
